<h1> タスク一覧 </h1>
<% @tasks.each do |task| %>
    <p> <%= link_to "#{task.id} . #{task.name}", task_path(task) %>
    <a href="/tasks/<%= task.id %>/edit">
        <i class="fa-regular fa-pen-to-square" style="margin-left: 30px;"></i>
    </a>
    <a href="/tasks/<%= task.id %>>" data-turbo-method="delete">
      <i class="fa-solid fa-trash" style="margin-left:10px;"></i>
    </a>
    </p>
<% end %>

<div>
    <button>
        <a href="/tasks/new">タスク新規作成</a>
    </button>
</div>
